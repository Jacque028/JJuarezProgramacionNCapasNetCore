@model ML.Departamento
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Departamentos</h2>

< class="container">

    <div class="row">
        <div style="float:right">
            @Html.ActionLink("Agregar", "Form", "Departamento", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>



    <div class="row">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>Editar</th>

                    <th style="display:none">IdDepartamento</th>
                    <th>Departamento</th>
                    <th style="display:none">IdArea</th>
                    <th>Area</th>
                    <th>Eliminar</th>

                </tr>
            </thead>

            <tbody>
                @foreach(ML.Departamento departamento in Model.Departamentos){
                    <tr>
                        <td style="text-align: center; vertical-align: middle;"><a class="btn btn-warning" href="@Url.Action("Form", "Departamento", new { IdDepartamento = departamento.IdDepartamento})"><i class="bi bi-pencil-square" style="color: ivory"></i></a></td>
                        

                        <td style="display:none">@departamento.IdDepartamento</td>
                        <td>@departamento.Nombre</td>

                        <td style="display:none"> @departamento.Area.IdArea</td>
                        <td>@departamento.Area.Nombre</td>

                        
                        <td style="text-align: center; vertical-align: middle;"><a class="btn btn-danger" href="@Url.Action("Delete", "Departamento", new { IdDepartamento = departamento.IdDepartamento })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"><i class="bi bi-eraser-fill"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


